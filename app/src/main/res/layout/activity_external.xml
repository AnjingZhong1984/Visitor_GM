<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#F1F5FF"
              android:id="@+id/external_page"
              tools:context="fafa.com.visitor.ExternalActivity">

    <LinearLayout
            android:id="@+id/fullscreen_content_e"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="155dp">
        <ImageView
                android:keepScreenOn="true"
                android:layout_width="60dp"
                android:layout_height="150dp"
                android:layout_marginStart="50dp"
                android:id="@+id/back"
                android:src="@drawable/back"
                android:contentDescription="NOContent"/>
        <ImageView
                android:keepScreenOn="true"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginStart="50dp"
                android:id="@+id/logo"
                android:src="@drawable/logo"
                android:contentDescription="TODO"/>

        <RelativeLayout
                android:layout_width="680dp"
                android:gravity="end"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:id="@+id/reset"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/modify"
                    android:id="@+id/resetm"
                    android:contentDescription="TODO"/>
            <TextView
                    android:id="@+id/resetTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#79A0F1"
                    android:layout_marginStart="10dp"
                    android:text="Reset\n重填"
                    android:layout_toEndOf="@id/resetm">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="150dp"
                android:gravity="end"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:id="@+id/submit"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/submit"
                    android:id="@+id/submitm"
                    android:contentDescription="TODO"/>
            <TextView
                    android:id="@+id/submitTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#F07B4E"
                    android:layout_marginStart="10dp"
                    android:text="Submit\n提交"
                    android:layout_toEndOf="@id/submitm">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@+id/dotted_line"
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:layout_marginLeft="13dp"
          android:layout_marginRight="13dp"
          android:background="@drawable/bg_dotted_line"
          android:layerType="software"/>

    <TextView
            android:text="External Visitor Register 外部访客登记"
            android:textColor="#0044F4"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/textView1"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="22sp"
                      android:textColor="#006400"
                      android:id="@+id/heretosee"
                      android:layout_marginBottom="20dp"
                      android:text="Here To See拜访对象" />

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="23sp"
                      android:layout_marginTop="15dp"
                      android:textColor="#000000"
                      android:id="@+id/nameDesc"
                      android:text="Name员工姓名*" />
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:labelFor="@id/nameDesc"
                      android:id="@+id/name"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="10dp"
                      android:textColor="#000000"
                      android:background="@drawable/bg_edittext"
                      android:inputType="text"/>

            <Button
                    android:text="员工姓名校验"
                    android:background="@drawable/shape_button"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:textColor="#000fff"
                    android:id="@+id/verfyNameBtn"
                    android:layout_marginTop="5dp" />

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="23sp"
                      android:textColor="#000000"
                      android:layout_marginTop="15dp"
                      android:id="@+id/departmentDesc"
                      android:text="Department员工部门*"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:labelFor="@id/departmentDesc"
                      android:id="@+id/department"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="10dp"
                      android:textColor="#000000"
                      android:background="@drawable/bg_edittext"
                      android:inputType="text"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="23sp"
                      android:textColor="#333333"
                      android:layout_marginTop="15dp"
                      android:id="@+id/emailDesc"
                      android:text="Mail员工邮箱"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:labelFor="@id/emailDesc"
                      android:id="@+id/email"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="10dp"
                      android:textColor="#000000"
                      android:background="@drawable/bg_edittext"
                      android:inputType="textEmailAddress"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:visibility="invisible"
                      android:id="@+id/loading"
                      android:textColor="#ff0000"
                      android:text="登记中，请稍候...Please, Waiting...."
                      android:layout_marginTop="20dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:visibility="gone"
                      android:id="@+id/verfyNameResult"
                      android:textColor="#ff0000"
                      android:text="姓名验证失败！请咨询前台人员，获取正确姓名"
                      android:layout_marginTop="10dp"/>

        </LinearLayout>
        <View android:layout_width="1dp"
              android:layout_height="match_parent"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="20dp"
              android:background="#A0A0A0"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="22sp"
                      android:textColor="#006400"
                      android:id="@+id/yourinfo"
                      android:layout_marginBottom="20dp"
                      android:text="Your Information您的信息"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="23sp"
                      android:layout_marginTop="15dp"
                      android:textColor="#000000"
                      android:id="@+id/visitCompanyDesc"
                      android:text="Your Company您的公司*"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:labelFor="@id/visitCompanyDesc"
                      android:id="@+id/visitCompany"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="10dp"
                      android:textColor="#000000"
                      android:background="@drawable/bg_edittext"
                      android:inputType="text"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="23sp"
                      android:textColor="#000000"
                      android:layout_marginTop="15dp"
                      android:id="@+id/visitNameDesc"
                      android:text="Your Name您的姓名*"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:labelFor="@id/visitNameDesc"
                      android:id="@+id/visitName"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="10dp"
                      android:textColor="#000000"
                      android:background="@drawable/bg_edittext"
                      android:inputType="text"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="23sp"
                      android:textColor="#000000"
                      android:layout_marginTop="15dp"
                      android:id="@+id/visitMobileDesc"
                      android:text="Your Phone您的电话*"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:labelFor="@id/visitMobileDesc"
                      android:id="@+id/visitMobile"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="10dp"
                      android:textColor="#000000"
                      android:background="@drawable/bg_edittext"
                      android:inputType="phone"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="23sp"
                      android:textColor="#000000"
                      android:layout_marginTop="15dp"
                      android:id="@+id/reasonDesc"
                      android:text="Reason来访事由*"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:labelFor="@id/reasonDesc"
                      android:id="@+id/reason"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="10dp"
                      android:textColor="#000000"
                      android:background="@drawable/bg_edittext"
                      android:inputType="textMultiLine"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>


