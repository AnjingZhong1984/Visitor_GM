<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/background1"
              android:id="@+id/external_page"
              tools:context="fafa.com.visitor.ExternalActivity">

    <ImageView
            android:keepScreenOn="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="35dp"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:src="@drawable/logo1"/>

    <LinearLayout
            android:id="@+id/fullscreen_content_e"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="155dp">
    </LinearLayout>

    <View android:id="@+id/dotted_line"
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:layout_marginLeft="13dp"
          android:layout_marginRight="13dp"
          android:background="@drawable/bg_dotted_line"
          android:layerType="software"/>

    <TextView
            android:text="External Visitor Register \n 外部访客登记"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:lineSpacingExtra="10dp"
            android:id="@+id/textView1"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="0dp"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="420dp"
                android:layout_height="match_parent">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="24sp"
                      android:textColor="#ffffff"
                      android:id="@+id/yourinfo"
                      android:layout_marginBottom="40dp"
                      android:text="Your Information 您的信息"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/visitCompany"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="13dp"
                      android:textColor="#666666"
                      android:textColorHint="#666666"
                      android:hint="Your Company您的公司*"
                      android:background="@drawable/bg_edittext"
                      android:inputType="text"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:id="@+id/visitName"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="13dp"
                      android:textColor="#666666"
                      android:textColorHint="#666666"
                      android:hint="Your Name您的姓名*"
                      android:background="@drawable/bg_edittext"
                      android:inputType="text"/>


            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:id="@+id/visitMobile"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="13dp"
                      android:textColor="#666666"
                      android:textColorHint="#666666"
                      android:hint="Your Phone您的电话*"
                      android:background="@drawable/bg_edittext"
                      android:inputType="phone"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:id="@+id/reason"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="13dp"
                      android:textColor="#666666"
                      android:textColorHint="#666666"
                      android:hint="Reason来访事由*"
                      android:background="@drawable/bg_edittext"
                      android:inputType="textMultiLine"/>
        </LinearLayout>

        <View android:layout_width="2dp"
              android:layout_height="290dp"
              android:layout_marginLeft="50dp"
              android:layout_marginRight="50dp"
              android:layout_marginBottom="80dp"
              android:background="#ffffff"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="420dp"
                android:layout_height="match_parent">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="24sp"
                      android:textColor="#ffffff"
                      android:id="@+id/heretosee"
                      android:layout_marginBottom="40dp"
                      android:text="Here To See 拜访对象" />

            <LinearLayout android:orientation="horizontal" android:layout_width="420dp"
                          android:layout_height="wrap_content">
                <EditText android:layout_width="260dp"
                          android:layout_height="wrap_content"
                          android:id="@+id/name"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:textSize="20sp"
                          android:padding="13dp"
                          android:textColor="#666666"
                          android:textColorHint="#666666"
                          android:hint="Name员工姓名*"
                          android:background="@drawable/bg_edittext"
                          android:inputType="text"/>
                <Button
                        android:text="员工姓名校验"
                        android:background="@drawable/shape_button"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000fff"
                        android:id="@+id/verfyNameBtn" />
            </LinearLayout>


            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:id="@+id/department"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="13dp"
                      android:textColor="#666666"
                      android:textColorHint="#666666"
                      android:hint="Department员工部门*"
                      android:background="@drawable/bg_edittext"
                      android:inputType="text"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:id="@+id/email"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="13dp"
                      android:textColor="#666666"
                      android:textColorHint="#666666"
                      android:hint="Mail员工邮箱"
                      android:background="@drawable/bg_edittext"
                      android:inputType="textEmailAddress"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:visibility="invisible"
                      android:id="@+id/loading"
                      android:textColor="#ffff00"
                      android:text="Please, Waiting.... 登记中，请稍候..."
                      android:layout_marginTop="20dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:visibility="gone"
                      android:id="@+id/verfyNameResult"
                      android:textColor="#ffff00"
                      android:text="If Verify Failture, Please find help from reception \n 姓名验证失败！请咨询前台人员，获取正确姓名"
                      android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginTop="660dp"
                  android:orientation="horizontal">
        <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:id="@+id/back"
                android:src="@drawable/back1"
                android:contentDescription="NOContent"/>


        <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/rest1"
                android:id="@+id/reset"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="TODO"/>

        <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/submit1"
                android:id="@+id/submit"
                android:contentDescription="TODO"/>

    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bottom"
            android:id="@+id/bottomImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="743dp" />

</RelativeLayout>


