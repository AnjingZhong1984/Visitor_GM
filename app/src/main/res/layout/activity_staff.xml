<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/background1"
                android:id="@+id/staff_page"
                tools:context="fafa.com.visitor.StaffActivity">

    <ImageView
            android:keepScreenOn="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="35dp"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:src="@drawable/logo1"/>

    <LinearLayout
            android:id="@+id/fullscreen_content_s"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="155dp">
    </LinearLayout>

    <View android:id="@+id/dotted_line"
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:layout_marginLeft="13dp"
          android:layout_marginRight="13dp"
          android:background="@drawable/bg_dotted_line"
          android:layerType="software"/>

    <TextView
            android:text="Staff Register \n 员工登记"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:lineSpacingExtra="10dp"
            android:id="@+id/textView1"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="390dp"
            android:layout_height="match_parent">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="24sp"
                  android:textColor="#ffffff"
                  android:id="@+id/yourinfo"
                  android:layout_marginBottom="40dp"
                  android:text="Your Information 您的信息"/>


        <LinearLayout android:orientation="horizontal" android:layout_width="500dp"
                      android:layout_height="wrap_content">
            <EditText android:layout_width="340dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/hCode"
                      android:singleLine="true"
                      android:maxLines="1"
                      android:textSize="20sp"
                      android:padding="13dp"
                      android:textColor="#666666"
                      android:textColorHint="#666666"
                      android:hint="Your Code您的员工GID"
                      android:background="@drawable/bg_edittext"
                      android:inputType="text"/>
            <Button
                    android:text="点击校验GID"
                    android:background="@drawable/shape_button"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000fff"
                    android:id="@+id/verfyBtn"/>
        </LinearLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:visibility="gone"
                  android:id="@+id/verfyResult"
                  android:textColor="#ffff00"
                  android:text="GID验证错误，请输入正确GID"
                  android:layout_marginTop="10dp"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="25dp"
                  android:id="@+id/visitName"
                  android:singleLine="true"
                  android:maxLines="1"
                  android:textSize="20sp"
                  android:padding="13dp"
                  android:textColor="#666666"
                  android:textColorHint="#666666"
                  android:cursorVisible="false"
                  android:focusable="false"
                  android:focusableInTouchMode="false"
                  android:hint="Your Name您的姓名"
                  android:background="@drawable/bg_edittext"
                  android:visibility="invisible"
                  android:inputType="text"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="25dp"
                  android:id="@+id/remark"
                  android:singleLine="true"
                  android:maxLines="1"
                  android:textSize="20sp"
                  android:padding="13dp"
                  android:textColor="#666666"
                  android:textColorHint="#666666"
                  android:hint="Your Location您的所在地"
                  android:background="@drawable/bg_edittext"
                  android:visibility="invisible"
                  android:inputType="text"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="25dp"
                  android:id="@+id/department"
                  android:singleLine="true"
                  android:maxLines="1"
                  android:textSize="20sp"
                  android:padding="13dp"
                  android:textColor="#666666"
                  android:textColorHint="#666666"
                  android:hint="Your Dept.您的部门"
                  android:background="@drawable/bg_edittext"
                  android:visibility="invisible"
                  android:inputType="text"/>


        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="25dp"
                  android:id="@+id/badageNo"
                  android:singleLine="true"
                  android:maxLines="1"
                  android:textSize="20sp"
                  android:padding="13dp"
                  android:textColor="#666666"
                  android:textColorHint="#666666"
                  android:hint="Visitor Badge No. 访客证号码*"
                  android:background="@drawable/bg_edittext"
                  android:visibility="invisible"
                  android:inputType="phone"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:visibility="invisible"
                  android:id="@+id/loading"
                  android:textColor="#ffff00"
                  android:text="登记中，请稍候...Please, Waiting...."
                  android:layout_marginTop="10dp"/>


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginTop="660dp"
                  android:orientation="horizontal">
        <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:id="@+id/back"
                android:src="@drawable/back1"
                android:contentDescription="NOContent"/>


        <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/rest1"
                android:id="@+id/reset"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="TODO"/>

        <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/submit1"
                android:id="@+id/submit"
                android:contentDescription="TODO"/>

    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bottom"
            android:id="@+id/bottomImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="743dp"/>

</RelativeLayout>